<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <FontFamily x:Key="BebasNeueFontFamily">pack://application:,,,/Resources/Fonts/#Bebas Neue</FontFamily>
    <FontFamily x:Key="InterFontFamily">pack://application:,,,/Resources/Fonts/#Inter</FontFamily>

    <Style TargetType="TextBlock" x:Key="HeaderTextStyle">
        <Setter Property="FontFamily" Value="{StaticResource BebasNeueFontFamily}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="60"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="Foreground" Value="{DynamicResource MainFillBrush}"/>
    </Style>

    <Style TargetType="Run" x:Key="HeaderRunStyle">
        <Setter Property="FontFamily" Value="{StaticResource BebasNeueFontFamily}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="60"/>
        <Setter Property="Foreground" Value="{DynamicResource MainFillBrush}"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="DefaultTextStyle">
        <Setter Property="FontFamily" Value="{StaticResource InterFontFamily}"/>
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="ButtonTextStyle">
        <Setter Property="FontFamily" Value="{StaticResource BebasNeueFontFamily}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="48"/>
        <Setter Property="Foreground" Value="{DynamicResource SecondaryForegroundBrush}"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="MicroTextStyle" BasedOn="{StaticResource DefaultTextStyle}">
        <Setter Property="Foreground" Value="{DynamicResource MicroForegroundBrush}"/>
        <Setter Property="FontSize" Value="40"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="DescriptionTextStyle">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}"/>
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="TextTrimming" Value="WordEllipsis"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="IsHitTestVisible" Value="False"/>
    </Style>
</ResourceDictionary>