<UserControl x:Class="Lastik.Views.Controls.SearchBarHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Lastik.Views.Controls"
             xmlns:controls="clr-namespace:Lastik.ViewModels.Controls"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance controls:ScheduleListViewModel}"
             d:DesignHeight="120" d:DesignWidth="2000">
    <StackPanel Orientation="Horizontal"
                Height="120">
        <TextBox Tag="Поиск"
                 Text="{Binding SearchText,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                 FontSize="42"
                 CaretBrush="{StaticResource PrimaryForegroundBrush}"
                 Foreground="{StaticResource PrimaryForegroundBrush}"
                 FontFamily="{StaticResource InterFontFamily}">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="Width" Value="899" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsKeyboardOpen}" Value="True">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard
                                        TargetProperty="Width">
                                        <DoubleAnimation
                                            To="1940"
                                            Duration="0:0:0.25" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard
                                        TargetProperty="Width">
                                        <DoubleAnimation
                                            To="899"
                                            Duration="0:0:0.25" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="GotKeyboardFocus">
                    <b:InvokeCommandAction Command="{Binding GotSearchFocusCommand}" />
                </b:EventTrigger>
            </b:Interaction.Triggers>
            <TextBox.ContextMenu>
                <ContextMenu Visibility="Collapsed" />
            </TextBox.ContextMenu>
            <TextBox.Template>
                <ControlTemplate>
                    <Border
                        Background="{StaticResource SecondaryForegroundBrush}"
                        BorderThickness="0"
                        CornerRadius="24">
                        <Grid>
                            <ContentPresenter ContentTemplate="{StaticResource SearchIcon}"
                                              HorizontalAlignment="Left"
                                              Margin="38" />
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="100 0 40 0"
                                          VerticalAlignment="Center"
                                          Panel.ZIndex="1" />
                            <TextBlock Text="{TemplateBinding TextBox.Tag}"
                                       FontSize="40"
                                       Name="TextBlock"
                                       VerticalAlignment="Center"
                                       Margin="100 0 20 0"
                                       Opacity=".5">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource DefaultTextStyle}">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger
                                                Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=TextBox}, Path=Text.Length}"
                                                Value="0">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </TextBox.Template>
        </TextBox>
        <ListBox ItemsSource="{Binding NavigationItems}"
                 AlternationCount="3"
                 Background="Transparent"
                 BorderBrush="Transparent"
                 Margin="24 0 0 0"
                 SelectedItem="{Binding CurPage}">
            <ListBox.Style>
                <Style TargetType="ListBox">
                    <Setter Property="Opacity" Value="1" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsKeyboardOpen}" Value="True">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard
                                        TargetProperty="Opacity">
                                        <DoubleAnimation
                                            To="0"
                                            Duration="0:0:0.25" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard
                                        TargetProperty="Opacity">
                                        <DoubleAnimation
                                            To="1"
                                            Duration="0:0:0.25" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListBox.Style>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Style="{StaticResource ButtonTextStyle}"
                               Text="{Binding PageTitle}"
                               FontSize="32"
                               TextWrapping="Wrap"
                               FontWeight="SemiBold" />
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Background" Value="Gray" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="24"
                                        Width="318"
                                        Height="96">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="ListBox.AlternationIndex" Value="1">
                            <Setter Property="Margin" Value="30 0" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{StaticResource MainFillBrush}" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
    </StackPanel>
</UserControl>